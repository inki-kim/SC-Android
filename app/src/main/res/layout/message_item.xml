<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/linearMessageItemMain">

    <LinearLayout
        android:id="@+id/linearMessageItemDestination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMessageItemProfile"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/textMessageItemName"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textMessageItem"
            android:text="메시지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="2011.11.11 11:11"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textMessageItemTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>